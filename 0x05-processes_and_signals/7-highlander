#!/usr/bin/env bash
# Script that displays "To infinity and beyond" indefinitely and handles SIGTERM
# Function to handle SIGTERM
handle_sigterm() {
    echo "I am invincible!!!"
}
# Set up signal handler for SIGTERM that prints message but doesn't exit
trap handle_sigterm SIGTERM
# Infinite loop
while true; do
    echo "To infinity and beyond"
    sleep 2
done
